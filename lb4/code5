import numpy as np

print("Обчислити визначники:")
a = np.array([[1, 2, 0, 0, 0], [1, 0, 2, 0, 0], [1, 0, 0, 2, 0], [1, 0, 0, 0, 2],
 [0, 0, 1, 1, 1]])
print("Матриця:")
print (a)

a = np.matrix('1, 2, 0, 0, 0; 1, 0, 2, 0, 0; 1, 0, 0, 2, 0; 1, 0, 0, 0, 2; 0, 0, 1, 1, 1')
a_det = np.linalg.det(a)
print("Визначник матриці: ")
print(format(a_det, '.9g'))
